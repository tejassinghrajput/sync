# Database Sync Panel Configuration
# Copy this file to .env and fill in your actual credentials

# User Passwords
ADMIN_PASS=your_admin_password
GOLDY_PASS=your_goldy_password
PIYUSH_PASS=your_piyush_password
TEJAS_PASS=your_tejas_password

# Database Names
DB_MAIN=main_database
DB_GOLDY=goldy_database
DB_PIYUSH=piyush_database
DB_TEJAS=tejas_database

# Database CLI Credentials (for mysqldump/mysql commands)
DB_CLI_USER=root
DB_CLI_PASS=your_mysql_password

# Directories
DUMP_DIR=./dumps
LOG_FILE=logs/app.log

# GitHub Integration (for auto-push of SQL dumps)
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_REPO=username/repository
GIT_EMAIL=sync-bot@example.com
GIT_NAME=DB Sync Bot
GIT_BRANCH=main
